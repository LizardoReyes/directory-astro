---
import CardCategory from "../components/card/CardCategory.astro";
import Pagination from "../components/Pagination.astro";
import Layout from "../layouts/Layout.astro";
import { getSiteInfo } from "../libs/csv";
import { type CategoryType } from "../types/CategoryType";
import type { PostType } from "../types/PostType";

type CategoryProps = {
  category: CategoryType;
  currentPage: number;
  totalPages: number;
  basePath: string;
  posts: PostType[];
};

const { category, posts, currentPage, totalPages, basePath } = Astro.props as CategoryProps;
const { name } = getSiteInfo();
---

<Layout title={"▷ " + category.title + " - Page " + currentPage + " - " + name} description={category.description}>
  <main class="container mx-auto px-4 py-10">
    <!-- Categoría: Frigiliana -->
    <section class="bg-white shadow-md rounded-lg p-8">
      <!-- Título de la categoría -->
      <h1 class="text-3xl font-bold text-gray-800 mb-6">
        Categoría: {category.title}
      </h1>

      <!-- Descripción opcional -->
      <p class="text-gray-600 mb-8">
        {category.description}
      </p>

      <!-- Grid de artículos -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
      >
        <!-- Posts -->
        {posts.map((post) => <CardCategory post={post} />)}
      </div>

      <Pagination
        currentPage={currentPage}
        totalPages={totalPages}
        basePath={basePath}
      />
    </section>
  </main>
</Layout>
