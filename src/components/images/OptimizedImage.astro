---
interface Props {
    src: string;
    alt?: string;
    class?: string;
    id?: string;
}

const { src = "default.png", alt = "", class: className = "", id = "" } = Astro.props;

// Detectar si es una URL externa
const isExternal = src.startsWith("http://") || src.startsWith("https://");

let imageSrc = src || "default.png";

if (!isExternal) {
    const images = import.meta.glob(
        "../../assets/images/*.{jpg,jpeg,png,webp,avif}",
        {
            eager: true,
            query: {
                w: "200;600",
                format: "webp;avif",
                as: "picture",
            },
        }
    );

    const imagePath = `../../assets/images/${imageSrc}`;
    const imageModule = images[imagePath];

    if (!imageModule) {
        throw new Error(`La imagen "${imageSrc}" no se encontr√≥ en src/assets/images`);
    }

    // @ts-ignore
    imageSrc = imageModule.default;
}
---

<img
        id={id}
        src={imageSrc}
        alt={alt}
        title={alt}
        class={className}
/>
