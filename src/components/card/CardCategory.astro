---
import { createSlug, getDateTimeString } from "../../libs/global.ts";
import type { PostType } from "../../types/PostType";
import OptimizedImage from "../images/OptimizedImage.astro";

type PostProps = {
  post: PostType;
};

const { post } = Astro.props as PostProps;
---

<!-- Artículo -->
<div class="bg-gray-50 rounded-lg shadow-sm p-5 flex flex-col">
  <a href={post.slug || createSlug(post.title)}>
    <OptimizedImage
      src={post.image}
      alt={post.title}
      class="rounded-lg mb-4 w-full h-48 object-cover"
    />
  </a>
  <h2 class="text-lg font-bold text-blue-700 mb-2">
    <a href={post.slug || createSlug(post.title)}>
      {post.title}
    </a>
  </h2>
  <p class="text-xs text-gray-500 mb-2">
    📅 {getDateTimeString(post.publishedAt)} — ✍️ Juan Pérez
  </p>
  <p class="text-sm text-gray-700 mb-4 flex-grow">
    {post.content}
  </p>
  <a
    href={post.slug || createSlug(post.title)}
    class="bg-blue-600 text-white text-sm text-center px-4 py-2 rounded hover:bg-blue-700"
    >Ver artículo »</a
  >
</div>
