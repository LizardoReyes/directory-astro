---
import { getSiteInfo } from "../libs/csv";

const { name } = getSiteInfo();
const year = new Date().getFullYear();
---

<header class="bg-white shadow py-4">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <p class="text-xl font-bold">
      <a href="/" class="text-gray-700 font-semibold hover:text-blue-600"
        >{name}</a
      >
    </p>

    <!-- Botón hamburguesa (visible solo en móviles) -->
    <button id="menu-button" class="md:hidden text-gray-700 focus:outline-none">
      <!-- Icono hamburguesa -->
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        >
        </path>
      </svg>
    </button>

    <!-- Navegación (oculta en móviles, visible en pantallas medianas en adelante) -->
    <nav class="hidden md:flex space-x-6" id="menu">
      <a
        href="/"
        class="text-gray-700 font-semibold hover:text-blue-600 hover:shadow-button-hover hover:scale-110"
        >Inicio</a
      >
      <a
        href="/localidades"
        class="text-gray-700 font-semibold hover:text-blue-600 hover:shadow-button-hover hover:scale-110"
        >Localidades</a
      >
      <a
        href="/nosotros"
        class="text-gray-700 font-semibold hover:text-blue-600 hover:shadow-button-hover hover:scale-110"
        >Nosotros</a
      >
      <a
        href="/sitemap-index.xml"
        class="text-gray-700 font-semibold hover:text-blue-600 hover:shadow-button-hover hover:scale-110"
        >Sitemap</a
      >
      <a
        href="/contact"
        class="text-gray-700 font-semibold hover:text-blue-600 hover:shadow-button-hover hover:scale-110"
        >Contacto</a
      >
    </nav>
  </div>

  <!-- Menú desplegable móvil -->
  <div
    class="md:hidden px-4 text-center"
    id="mobile-menu"
    style="display: none;"
  >
    <nav class="flex flex-col space-y-2 mt-4">
      <a
        href="/"
        class="text-gray-700 font-semibold hover:text-blue-600 hover:shadow-button-hover hover:scale-110"
        >Inicio</a
      >
      <a
        href="/localidades"
        class="text-gray-700 font-semibold hover:text-blue-600 hover:shadow-button-hover hover:scale-110"
        >Localidades</a
      >
      <a
        href="/page"
        class="text-gray-700 font-semibold hover:text-blue-600 hover:shadow-button-hover hover:scale-110"
        >Nosotros</a
      >
      <a
        href="/sitemap-index.xml"
        class="text-gray-700 font-semibold hover:text-blue-600 hover:shadow-button-hover hover:scale-110"
        >Sitemap</a
      >
      <a
        href="/page"
        class="text-gray-700 font-semibold hover:text-blue-600 hover:shadow-button-hover hover:scale-110"
        >Contacto</a
      >
    </nav>
  </div>
</header>
