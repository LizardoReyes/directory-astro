---
import Layout from "../layouts/Layout.astro";
import {getSiteInfo} from "../libs/csv";
import {getTranslations} from "../i18n";

const { language, baseUrl } = getSiteInfo();
const t = getTranslations(language);
---

<Layout title={t.CONTACT_TITLE_TEXT} description="Página de contacto del Restaurante Afrodita">
  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("contact-form");
      const success = document.getElementById("success-message");
      const error = document.getElementById("error-message");

      form.addEventListener("submit", (e) => {
        e.preventDefault();

        // Simular validación y respuesta (puedes poner lógica real si conectas API)
        const formData = new FormData(form);
        const name = formData.get("name");
        const email = formData.get("email");
        const message = formData.get("message");

        if (name && email && message) {
          success.classList.remove("hidden");
          error.classList.add("hidden");
          form.reset(); // opcional
        } else {
          error.classList.remove("hidden");
          success.classList.add("hidden");
        }
      });
    });
  </script>
  <main class="container mx-auto px-4 py-10">
    <section class="bg-bg text-text shadow-md rounded-lg p-8 max-w-2xl mx-auto border border-border transition-colors duration-300">

      <!-- Título -->
      <h1 class="text-3xl font-bold text-primary mb-6">{t.CONTACT_TITLE_TEXT}</h1>

      <p class="text-muted mb-8">
        {t.CONTACT_DESCRIPTION_TEXT}
      </p>

      <form id="contact-form" method="POST" class="space-y-6">
        <!-- Nombre -->
        <div>
          <label for="name" class="block text-sm font-medium text-muted mb-1">
            {t.CONTACT_NAME_TEXT}
          </label>
          <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2 border border-border rounded-lg bg-bg text-text focus:outline-none focus:ring-2 focus:ring-primary"
          />
        </div>

        <!-- Correo -->
        <div>
          <label for="email" class="block text-sm font-medium text-muted mb-1">
            {t.CONTACT_EMAIL_TEXT}
          </label>
          <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 border border-border rounded-lg bg-bg text-text focus:outline-none focus:ring-2 focus:ring-primary"
          />
        </div>

        <!-- Mensaje -->
        <div>
          <label for="message" class="block text-sm font-medium text-muted mb-1">
            {t.CONTACT_MESSAGE_TEXT}
          </label>
          <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-2 border border-border rounded-lg bg-bg text-text focus:outline-none focus:ring-2 focus:ring-primary"
          ></textarea>
        </div>

        <!-- Botón -->
        <div class="flex justify-center">
          <button
              type="submit"
              class="inline-block bg-primary hover:bg-primary-hover text-text text-sm font-semibold px-6 py-2.5 rounded-lg shadow-md hover:shadow-lg ring-1 ring-border transition duration-150 ease-in-out"
          >
            {t.CONTACT_SUBMIT_TEXT}
          </button>
        </div>
      </form>

      <!-- Información adicional -->
      <div class="mt-10 text-sm text-muted">
        <p>
          <strong>{t.CONTACT_MESSAGE_TEXT}:</strong>
          contact@{baseUrl.replace(/^https?:\/\/(www\.)?/, "").replace(/\/$/, "")}
        </p>
      </div>

      <!-- Mensajes de éxito/error -->
      <div class="mt-10 text-sm text-green-600 text-center hidden" id="success-message">
        {t.CONTACT_SUCCESS_TEXT}
      </div>
      <div class="mt-10 text-sm text-red-600 text-center hidden" id="error-message">
        {t.CONTACT_SUCCESS_TEXT}
      </div>
    </section>
  </main>
</Layout>

